{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Streamlit Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port",
                "2000"
            ]
        },
        {
            "name": "FastAPI Debugger: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "example_fastapi.main:app", // Replace 'main:app' with your actual module and app instance
                "--reload",
                //"--host", "0.0.0.0",
                "--port", "8000"
            ],
            //"cwd": "${workspaceFolder}/example_fastapi/", // Set the working directory to your FastAPI app folder
            "console": "integratedTerminal"
            
        }
    ]
}